{
	"name": "ka-extension-ts",
	"version": "4.7.8",
	"description": "A chrome extension for the Khan Academy Computer Programming section",
	"private": true,
	"scripts": {
		"build": "esbuild ./src/index.ts ./src/background.ts ./src/content.ts ./src/popup.ts --bundle --outdir=dist --target=es6",
		"build-prod": "esbuild ./src/index.ts ./src/background.ts ./src/content.ts ./src/popup.ts --bundle --minify --outdir=dist --target=es6",
		"clean": "rm ./dist/*",
		"lint": "tslint --project tsconfig.json -c tslint.json \"src/**/*.ts\"",
		"fix": "tslint --project tsconfig.json -c tslint.json \"src/**/*.ts\" --fix",
		"release": "npm run clean && npm run build-prod && sh release.sh"
	},
	"keywords": [
		"Khan Academy",
		"Browser Extension"
	],
	"author": "KA Extension Developers",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ka-extension/ka-extension-ts"
	},
	"devDependencies": {
		"@types/chrome": "0.0.63",
		"@types/core-js": "^2.5.5",
		"esbuild": "^0.11.23",
		"tslint": "^6.1.3",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"highlight.js": "^11.5.0",
		"whatwg-fetch": "^3.6.2"
	}
}
