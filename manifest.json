{
    "manifest_version": 2,
    "name": "The Khan Academy Extension",
    "short_name": "The KA Extension",
    "version": "3.1.0",
    "description": "A Chrome Extension for Khan Academy",
    "minimum_chrome_version": "33.0.1750",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "browser_action": {
        "default_title": "Khan Academy Extension",
        "default_icon": {
            "16": "images/icon16.png", 
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        },
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [{
        "js": ["dist/content.js"],
        "matches": ["*://*.khanacademy.org/*"],
        "css": ["styles/general.css"],
        "run_at" : "document_end"
    }],
    "permissions": [
        "activeTab",
        "storage",
        "cookies",
        "downloads",
        "*://*.khanacademy.org/*"
    ],
    "web_accessible_resources": [
        "tabs",
        "dist/index.js",
        "dist/popup.js",
        "styles/general.css"
    ],
    "background": {
      "scripts": ["dist/background.js"]
    },
    "externally_connectable": {
      "matches": ["*://*.khanacademy.org/*"]
    }
}